<div class="dash-container">
        <div class="options">
            <h3>{{dealer.StoreName}}</h3>
            <ul>
                <li><a href="dealer/products"><i class="fas fa-users"></i>&nbsp;products</a></li>
                <li><a href="#"> <i class="fas fa-chart-pie"></i>&nbsp;Orders</a></li>
                <li><a href="#"><i class="fas fa-lightbulb"></i>&nbsp;Order History </a></li>
                
                <li><a href="#"><i class="fas fa-user"></i>&nbsp;users</a></li>
                <li><a href="#"><i class="fas fa-comment-alt"></i>&nbsp;Feedback</a></li>
                <li><a href="dealer/logout">Logout</a></li>
            </ul>
        </div>
        <div class="products">
            <div class="product-header">
                <h3>Products</h3>
                <a href="dealer/additem" class="btn btn-primary">Create item</a>
            </div>
            <table>
                <thead>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th>Left</th>
                    <th></th>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td><img src="/product-images/{{this._id}}.jpg" alt="" width="50px" height="50px"></td>
                        <td>{{this.Name}}</td>
                        <td>{{this.Category}}</td>
                        <td>{{this.Price}}</td>
                        <td>{{this.TotalStock}}</td>
                        <td>{{this.TotalStock}}</td>
                        <td><a href="dealer/edit-item/{{this._id}}" class="btn btn-success">edit</a>
                        <a href="#" class="btn btn-dark">stock</a>
                        <a href="dealer/delete-dealer/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you want to delete {{this.Name}}') ">delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        </div>
        <style>
            .product-header a{
                height: 2.5em;
            }
            .product-header{
                padding-top: 1em;
                position: relative;
                width: 100%;
                height: 15%;
                display: flex;
                justify-content: space-around  ;
                color: #080f58;
                font-size: bold;
            }
            .products{
                width: 85vw;
                height: 100vh;
                background-color: #f5f5f5;
                margin-left: 15vw;
            }
            .options{
                 background: linear-gradient(to bottom right,#080f58,#2d248a);
                text-align: center;
            }
            h3{
                text-transform: capitalize;
                
            }
            table{
        width: 100%;
    }
    th,td{
        padding-left: 1em;
        padding-top: 1em;
    }
    th{
        border-bottom: 1px solid #ddd;
        color: #999;
    }
